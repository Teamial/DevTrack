{
  "name": "devtrack",
  "displayName": "DevTrack",
  "description": "Track your coding journey effortlessly with DevTrack",
  "version": "8.1.0",
  "publisher": "TeannaCole",
  "repository": {
    "type": "GitHub",
    "url": "https://github.com/Teamial/DevTrack/tree/master"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "SCM Providers",
    "Other",
    "Programming Languages",
    "Formatters",
    "Education"
  ],
  "keywords": [
    "git",
    "tracking",
    "productivity",
    "automation",
    "code-analytics",
    "time-tracking",
    "version-control",
    "collaboration",
    "github",
    "documentation"
  ],
  "activationEvents": [
    "onView:devtrack",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "icon": "studio-128x128.png",
  "contributes": {
    "commands": [
      {
        "command": "devtrack.startTracking",
        "title": "DevTrack: Start Tracking",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(play-circle)"
      },
      {
        "command": "devtrack.stopTracking",
        "title": "DevTrack: Stop Tracking",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(stop-circle)"
      },
      {
        "command": "devtrack.pauseTracking",
        "title": "DevTrack: Pause Tracking",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(debug-pause)"
      },
      {
        "command": "devtrack.resumeTracking",
        "title": "DevTrack: Resume Tracking",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(debug-continue)"
      },
      {
        "command": "devtrack.commitNow",
        "title": "DevTrack: Commit Now",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(save-all)"
      },
      {
        "command": "devtrack.login",
        "title": "DevTrack: Login to GitHub",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(github)"
      },
      {
        "command": "devtrack.logout",
        "title": "DevTrack: Logout from GitHub",
        "icon": "$(sign-out)"
      },
      {
        "command": "devtrack.showGitGuide",
        "title": "DevTrack: Show Git Installation Guide",
        "icon": "$(book)"
      },
      {
        "command": "devtrack.openFolder",
        "title": "DevTrack: Open Folder",
        "enablement": "workspaceFolderCount == 0",
        "icon": "$(folder-opened)"
      },
      {
        "command": "devtrack.showDashboard",
        "title": "DevTrack: Show Activity Dashboard",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(graph)"
      },
      {
        "command": "devtrack.generateReport",
        "title": "DevTrack: Generate Activity Report",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(file-text)"
      },
      {
        "command": "devtrack.generateWebsite",
        "title": "DevTrack: Generate Statistics Website",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(globe)"
      },
      {
        "command": "devtrack.showSettings",
        "title": "DevTrack: Open Settings",
        "icon": "$(gear)"
      },
      {
        "command": "devtrack.previewNextCommit",
        "title": "DevTrack: Preview Next Commit",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(inspect)"
      },
      {
        "command": "devtrack.exportDiagnostics",
        "title": "DevTrack: Export Diagnostics",
        "icon": "$(cloud-download)"
      },
      {
        "command": "devtrack.resetTrackingRepo",
        "title": "DevTrack: Reset Tracking Repo (This Workspace)",
        "enablement": "workspaceFolderCount != 0",
        "icon": "$(trash)"
      },
      {
        "command": "devtrack.test",
        "title": "DevTrack: Test Extension Loading"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "devtrack.commitNow",
          "when": "devtrack:isTracking"
        },
        {
          "command": "devtrack.pauseTracking",
          "when": "devtrack:isTracking"
        },
        {
          "command": "devtrack.resumeTracking",
          "when": "!devtrack:isTracking && devtrack:isInitialized"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "DevTrack Configuration",
      "properties": {
        "devtrack.repoName": {
          "type": "string",
          "default": "code-tracking",
          "description": "Name of the GitHub repository to store tracking logs."
        },
        "devtrack.repoVisibility": {
          "type": "string",
          "enum": ["private", "public"],
          "default": "private",
          "description": "Visibility of the DevTrack GitHub repository. Private by default."
        },
        "devtrack.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start DevTrack on startup. If not authenticated, DevTrack will prompt you to sign in to GitHub."
        },
        "devtrack.privacyLevel": {
          "type": "string",
          "enum": ["aggregateOnly", "extensions", "relativePaths"],
          "default": "extensions",
          "description": "How much file detail DevTrack records in the tracking repo. aggregateOnly: totals only; extensions: counts by extension; relativePaths: includes relative file paths (still no file contents)."
        },
        "devtrack.commitFrequency": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 120,
          "description": "How often (in minutes) to commit your coding history."
        },
        "devtrack.confirmBeforeCommit": {
          "type": "boolean",
          "default": true,
          "description": "Show a confirmation dialog before each automatic commit."
        },
        "devtrack.exclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "out/**",
            "build/**"
          ],
          "description": "List of glob patterns to exclude from tracking."
        },
        "devtrack.defaultIgnoredFoldersEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Ignore common generated folders by default (in addition to devtrack.exclude)."
        },
        "devtrack.defaultIgnoredFolders": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "node_modules",
            "dist",
            "out",
            "build",
            ".next",
            ".nuxt",
            "coverage",
            ".turbo",
            ".cache",
            "target",
            "vendor"
          ],
          "description": "Folder names that DevTrack will ignore when defaultIgnoredFoldersEnabled is true."
        },
        "devtrack.trackedExtensionsMode": {
          "type": "string",
          "enum": ["all", "list"],
          "default": "all",
          "description": "Which files DevTrack tracks: all files (filtered by excludes/ignored folders) or only the extensions in devtrack.trackedExtensions."
        },
        "devtrack.trackedExtensions": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "File extensions to track when trackedExtensionsMode is 'list' (e.g. ['ts','tsx','js'])."
        },
        "devtrack.changeDebounceMs": {
          "type": "number",
          "default": 750,
          "minimum": 0,
          "maximum": 10000,
          "description": "Debounce window (ms) for file watcher events to reduce noise from rapid saves/formatters."
        },
        "devtrack.enableAdaptiveScheduling": {
          "type": "boolean",
          "default": true,
          "description": "Automatically adjust commit schedule based on coding activity."
        },
        "devtrack.adaptiveEarlyCommitAfterFraction": {
          "type": "number",
          "default": 0.5,
          "minimum": 0.1,
          "maximum": 0.9,
          "description": "When adaptive scheduling is enabled, allow early commits after this fraction of the commit interval has elapsed."
        },
        "devtrack.adaptiveMinDistinctFiles": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 50,
          "description": "Minimum number of distinct changed files required to trigger an adaptive early commit."
        },
        "devtrack.adaptiveMinKeystrokes": {
          "type": "number",
          "default": 120,
          "minimum": 0,
          "maximum": 100000,
          "description": "Minimum keystrokes required to trigger an adaptive early commit (helps avoid noise from auto-formatters). If keystrokes are not tracked, distinct-file threshold is used."
        },
        "devtrack.minChangesForCommit": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "description": "Minimum number of file changes required to trigger a commit."
        },
        "devtrack.minActiveTimeForCommit": {
          "type": "number",
          "default": 60,
          "minimum": 30,
          "description": "Minimum active coding time (in seconds) required to trigger a commit."
        },
        "devtrack.trackLineChanges": {
          "type": "boolean",
          "default": true,
          "description": "Track number of lines changed per file."
        },
        "devtrack.trackKeystrokes": {
          "type": "boolean",
          "default": true,
          "description": "Track number of keystrokes during coding sessions."
        },
        "devtrack.maxIdleTimeBeforePause": {
          "type": "number",
          "default": 900,
          "minimum": 300,
          "description": "Maximum idle time (in seconds) before tracking is paused."
        },
        "devtrack.authorStrategy": {
          "type": "string",
          "enum": ["githubNoreply", "localGitConfig", "custom"],
          "default": "githubNoreply",
          "description": "How DevTrack sets commit author identity for the tracking repo. githubNoreply counts toward GitHub contributions most reliably."
        },
        "devtrack.authorName": {
          "type": "string",
          "default": "",
          "description": "Custom commit author name when authorStrategy is 'custom'."
        },
        "devtrack.authorEmail": {
          "type": "string",
          "default": "",
          "description": "Custom commit author email when authorStrategy is 'custom'. For contributions to count, this email must be associated with your GitHub account."
        },
        "devtrack.showReportOnCommit": {
          "type": "boolean",
          "default": false,
          "description": "Show a brief report after each successful commit."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "build": "npm run compile && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "lucide-react": "^0.330.0",
    "minimatch": "^10.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0",
    "simple-git": "^3.27.0",
    "yazl": "^3.3.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.5",
    "@types/yazl": "^2.4.6",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^10.4.5",
    "mocha": "^10.8.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vscode": "^1.1.37"
  },
  "extensionDependencies": [
    "vscode.git"
  ]
}
